<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.teamoptimal.cse110project.CreateRestroomActivity">

    <!--<android.support.v7.app.WindowDecorActionBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/decorBar"/>-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Creating new restroom at current location"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Fill in name and wait for location to be found before saving"
        android:id="@+id/textview2"
        android:textColor="#9b000000"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textSize="12sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:hint="descriptive name for restroom"
        android:inputType="textEmailAddress"
        android:imeOptions="actionNext"
        android:imeActionLabel="Next"
        android:layout_below="@+id/textview2"
        android:maxLines="2"
        android:layout_alignParentStart="true" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:hint="floor"
        android:inputType="phone"
        android:imeOptions="actionNext"
        android:imeActionLabel="Next"
        android:maxLines="1"
        android:layout_above="@android:id/list"
        android:layout_alignEnd="@+id/textView" />


    <ListView
        android:id="@android:id/list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText"
        android:layout_above="@+id/ratingBar"
        android:layout_alignStart="@+id/editText"
        android:layout_alignEnd="@+id/ratingBar"/>
    

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_above="@+id/button"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Restroom"
        android:id="@+id/button"
        android:textColor="#ffe016"
        android:backgroundTint="#be0037ff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>

